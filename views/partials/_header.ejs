<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-danger">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user){ %>
      <form method="GET" action="/register" class="form-inline">
        <button type="submit" class="btn btn-outline-warning">Register</button>
      </form>
      <div style="width: 10px;"></div>
      <form method="GET" action="/login" class="form-inline">
        <button type="submit" class="btn btn-outline-light">Login</button>
      </form>
    <% } else{ %>  
      <form method="POST" action="/logout" class="form-inline">
        <h5 style="margin-bottom: 0; margin-right: 0.5rem; color: white;">Logged in as: <%= user.email %></h5>
      <button type="submit" class="btn btn-outline-light">Logout</button>
   <% } %>
  </form>
  </nav>
</header>
